<div class="ui two wide column"></div>
<div class="twelve wide column">
    {% for block in blocks %}
        <div class="ui three column center aligned stackable divided grid">
            {% for product in block %}
                <div class="column">
                    <div class="ui icon header">
                        <a href="{{ path('product_show', {'slug': product.slug}) }}" >
                            <img src="{{ asset( product.getImagePath() ) }}" class="ui image ">
                            {{ product.name }}
                        </a>
                    </div>
                    <p>{% include 'AcmeHandmadeBundle:Product:buy_button.html.twig' with {'product': product} %}</p>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>